@model IEnumerable<Producer>

<div class="d-flex justify-content-center">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex flex-row-reverse mb-4 mt-2">
            <a asp-controller="Producers" asp-action="Create" class="btn btn-outline-success btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg> Add Producer</a>
        </div>
        <table class="table align-middle mb-0 bg-white p-3 rounded rounded border-bottom shadow-1">
            <thead class="bg-light shadow-2">
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="shadow-3 rounded">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@item.ProfilePicture" alt="@item.FullName"
                                     style="width: 45px; height: 45px"
                                     class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@item.FullName</p>

                                </div>
                            </div>
                        </td>

                        <td>@Html.DisplayFor(modelItem=>item.Bio)</td>
                        <td class="text-center">
                            <a  class="btn  btn-secondary btn-warning btn-floating" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Edit"  asp-action="Edit" asp-route-id="@item.Id">

                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
                            </a>

                            <a  class="btn btn-info btn-floating" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Information" asp- asp-action="Info" asp-route-id="@item.Id">
                            
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-info-circle" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" /></svg>

                            </a>
                            <a class="btn btn-danger btn-floating" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Delete"  asp-action="Delete" asp-route-id="@item.Id">
                                
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg
                            ></a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>