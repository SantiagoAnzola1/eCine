@using eCine.Data.ViewModels
@model SignUpVM;


@{
    ViewData["Title"] = "Sign Up";
}

<section class="w-100 d-flex justify-content-center align-items-center" >
    <div class="d-flex flex-column justify-content-center align-items-center w-100 p-2 mt-5 ">

    
        <h1>Sign Up</h1>


        <form asp-action="SignUp" method="post" class="px-3 mt-4 w-100 account-form d-flex flex-column justify-content-center ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            

            <div class="mt-2">
                <div data-mdb-input-init class="form-outline mt-1">
                    <input asp-for="FullName" type="text" class="form-control" />
                    <label asp-for="FullName" class="form-label" >Full Name</label>
                </div>
                <span asp-validation-for="FullName" class="text-danger error-message p-1"></span>
            </div>
            <div class="mt-2">
                <div data-mdb-input-init class="form-outline mt-1">
                    <input asp-for="Email" type="text" class="form-control" />
                    <label asp-for="Email" class="form-label" >Email</label>
                </div>
                <span asp-validation-for="Email" class="text-danger error-message p-1"></span>
            </div>
            <div class="mb-2">
                <div data-mdb-input-init class="form-outline mt-1">
                    <input asp-for="Password" type="password" class="form-control" />
                    <label asp-for="Password" class="form-label">Password</label>
                </div>
                <span asp-validation-for="Password" class="text-danger error-message p-1"></span>
            </div>
            <div class="mb-2">
                <div data-mdb-input-init class="form-outline mt-1">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger error-message p-1"></span>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger py-2 mt-2 mb-4" role="alert">
                    <span>@TempData["Error"]</span>
                </div>
            }
            <button type="submit" value="SignUp" class="btn btn-dark">Sign Up</button>
        </form>
    </div>
</section>